    <div class="form-group">
      <label autocomplete="off" class="control-label" for="state">State</label><br>
      <input autofocus="autofocus" class="artist-form" id="state" name="state" type="text">
    </div>

    <div class="form-group">
      <label autocomplete="off" class="control-label" for="zip_code">Zip Code</label><br>
      <input autofocus="autofocus" class="artist-form" id="zip_code" name="zip_code" type="text">
    </div>

  <h3>Optional: </h3>
    <div class="form-group">
      <label autocomplete="off" class="control-label" for="artist_name">Artist Name</label><br>
      <input autofocus="autofocus" class="artist-form" id="artist_name" name="artist_name" type="text">
    </div>

   <input type="submit" value="Save" class ="btn">
 </form>

  </div>
</div>

